# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=sqlite:./dev.db
DATABASE_TYPE=sqlite

# PostgreSQL Configuration (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/mining_dashboard
# DATABASE_TYPE=postgresql

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@mining-dashboard.com

# API Configuration
API_RATE_LIMIT=100
UPDATE_INTERVAL=30000
CACHE_TTL=300

# Mining Pool API Configuration
ETHERMINE_API_URL=https://api.ethermine.org
F2POOL_API_URL=https://api.f2pool.com
FLEXPOOL_API_URL=https://flexpool.io/api/v2
TWOMINERS_API_URL=https://eth.2miners.com/api

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Development
DEV_SEED_DATA=true