{
  "name": "mining-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend API for Ethereum Mining Pool Dashboard",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:migrate": "node dist/database/migrate.js",
    "db:seed": "node dist/database/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.9",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/compression": "^1.7.2",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  },
  "keywords": [
    "ethereum",
    "mining",
    "api",
    "express",
    "typescript"
  ],
  "author": "Mining Dashboard Team",
  "license": "MIT"
